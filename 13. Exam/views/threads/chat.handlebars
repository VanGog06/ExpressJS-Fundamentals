<h3>You are chatting with {{chatWith}}:</h3>
{{#if messages}}
  <div class="messages">
    {{#each messages}}
      <div class="message">
        {{#if this.isImage}}
          <p><span class="{{this.isSender}}">{{this.sendBy}}</span>: <img src="{{this.message}}" alt="Picture" /></p>
        {{else if this.isLink}}
          <p><span class="{{this.isSender}}">{{this.sendBy}}</span>: <a href="{{this.message}}" target="_blank">{{this.message}}</a></p>
        {{else}}
          <p><span class="{{this.isSender}}">{{this.sendBy}}</span>: {{this.message}}</p>
        {{/if}}
      </div>
    {{/each}}
  </div>
{{else}}
  <h3>There are still no messages sent!</h3>
{{/if}}

<form class="send-msg" action="/thread/{{chatWith}}" method="post">
  <div class="form-group">
    <label for="message">Message:</label>
    {{#if isBlocked}}
      <textarea name="message" id="message" cols="30" rows="5" disabled="disabled"></textarea>
    {{else}}
      <textarea name="message" id="message" cols="30" rows="5" maxlength="1000"></textarea>
    {{/if}}
  </div>

  <div class="form-group">
    <input type="submit" value="Send" />
  </div>
</form>