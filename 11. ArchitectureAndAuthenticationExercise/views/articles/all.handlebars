<h1>Articles:</h1>
{{#if articles}}
  <ul class="articles">
    {{#each articles}}
      <li>
        <h3 class="article-title">Title: {{this.title}}</h3>
        <p class="article-description">Description: {{this.description}}</p>
        <a href="/article/details/{{this._id}}">Details</a>
        <a href="/article/edit/{{this._id}}">Edit</a>
        <a href="/article/delete/{{this._id}}">Delete</a>
      </li>
    {{/each}}
  </ul>
{{else}}
  <h3>There are no articles.</h3>
{{/if}}

{{#if hasPrev}}
  <a class="previous" href="/article/list?page={{prevPage}}"><<</a>
{{/if}}
{{#if hasNext}}
  <a class="next" href="/article/list?page={{nextPage}}">>></a>
{{/if}}
